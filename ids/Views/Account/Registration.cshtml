
@{
    ViewData["Title"] = "Registration";
}
@model RegistrationModel

<h1>Registration</h1>

<div class="container">
    <form asp-controller="Account" asp-action="Registration" method="post">


        <div class="form-group">
            <label asp-for="Username"></label>
            <input class="form-control" placeholder="Username" asp-for="Username" autofocus>
        </div>
        <div class="form-group">
            <label asp-for="Email"></label>
            <input  class="form-control" placeholder="Email" asp-for="Email" autocomplete="off">
        </div>
        <div class="form-group">
            <label asp-for="Password"></label>
            <input type="password" class="form-control" placeholder="Password" asp-for="Password" autocomplete="off">
        </div>
        <div class="form-group">
            <label asp-for="ConfirmPassword"></label>
            <input type="password" class="form-control" placeholder="Confirm Password" asp-for="ConfirmPassword" autocomplete="off">
        </div>

     


        <button class="btn btn-primary" type="submit" value="login">Registration</button>
    </form>

    <a asp-controller="Account" asp-action="Login">Login</a>
</div>
